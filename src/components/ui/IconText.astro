---
import Typography, {
  type Props as TypographyProps,
} from "@/components/ui/Typography.astro";

interface Props {
  variant?: TypographyProps["variant"];
  children: [Slottable, Slottable];
}

const { variant = "span" }: Props = Astro.props;
---

<Typography variant={variant} className="inline-flex items-center gap-1.5">
  <slot />
</Typography>
