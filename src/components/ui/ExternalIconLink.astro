---
import Svg from "@/components/ui/Svg.astro";
import ExternalLink from "@/svg/external-link.svg?raw";

interface Props {
  href: string;
  label: string;
}

const { href, label }: Props = Astro.props;
---

<a
  href={href}
  aria-label={label}
  target="_blank"
  rel="noreferrer"
  class="text-muted-foreground hover:text-primary"
  ><Svg svgHtml={ExternalLink} /></a
>
